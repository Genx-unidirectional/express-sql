<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instagram profile</title>
    <link rel="stylesheet" href="/index.css">
</head>

<body>
    <header>
        <div>

            <h1>

                <%= data.name%>
            </h1>
        </div>
        <div>
            <p>
                <%=data.followers%>
            </p>
            <p>
                <%=data.following%>
            </p>
        </div>
    </header>
    <main>
        <% for(let post of data.posts){ %>
            <div class="img-card">
                <img src="<%= post.image %>" alt="">
                <p>
                    <%= post.likes %>
                </p>
                <p>
                    <%= post.comments %>
                </p>
            </div>
            <% } %>
    </main>
</body>

</html>